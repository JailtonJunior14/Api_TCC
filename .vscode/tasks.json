      "problemMatcher": []
    },
	  {
      "label": "Setup: Copiar .env",
      "type": "shell",
      "command": "copy .env.example .env",
      "problemMatcher": []
    },
    {
      "label": "Setup: Key Generate",
      "type": "shell",
      "command": "php artisan key:generate",
      "problemMatcher": []
    },
    {
      "label": "Setup: JWT Secret",
      "type": "shell",
      "command": "php artisan jwt:secret",
      "problemMatcher": []
    },
    {
      "label": "Setup Laravel Project",
      "dependsOn": [
        "Setup: Composer Install",
        "Setup: Copiar .env",
        "Setup: Key Generate",
        "Setup: JWT Secret"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Laravel: Serve",
      "type": "shell",
      "command": "php artisan serve",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Laravel: Migrate",
      "type": "shell",
      "command": "php artisan migrate",
      "problemMatcher": []
